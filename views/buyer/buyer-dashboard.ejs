<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/fontawesome.min.css">
    <link rel="stylesheet" href="/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-sm mb-0 rounded-top  ">
        <div class="container-fluid" style="background-color: red;">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="fas fa-bars" style="color:white"></span>
              </button>
              <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="nav-bar nav mx-auto">
                <li class="nav-item "><a  class="nav-link" href="/" style="color: white;">Home</a></li>
                <li class="nav-item "><a  class="nav-link" href="/login" style="color:white;">Sign in</a></li>
                <li class="nav-item "><a  class="nav-link" href="/buyer-dashboard" style="color:white;">product</a></li>
    
            </ul>
              </div>
        </div>
    </nav> 
    <div class="container-fluid mt-3">
        <h2 class="text-center">Buyer Dashboard</h2>
        <div class="row">
            <div class="col-lg-2 sidenav bg-danger text-light">
               <h3 class="text-center text-dark">Brand</h3>
               <ul>
               <li class="mt-3 text-center"><a href="/buyer-dashboard" class="dash"> Dashboard</a></li>
               <li class="mt-3"><a href=""><i class="fas fa-user mx-2"></i> Customers</a></li>
               <li class="mt-3"><a href=""><i class="fas fa-rocket mx-2"></i> Orders</a></li>
               <li class="mt-3"><a href=""><i class="fas fa-hand-holding-usd mx-2"></i>income</a></li>
               <li class="mt-3"><a href=""><i class="fas fa-question-circle mx-2"></i>Help</a></li>
               <li class="mt-3"><a href=""><i class="fas fa-cogs mx-2"></i>Settings</a></li>
            </ul>
            </div>

            <div class="col-lg-10">
              <div class="row">
                <%
                if(buywork.length > 0){
                    for(let buyer of buywork){%>
                        <div class="col-lg-3 all">
                            <div class="buy"><img src="<%=buyer.image %>" alt="buyer.name"></div>
                            <h4 class="text-danger"><%= buyer.name %></h4>
                            <!-- <p><%= buyer.description %></p> -->
                            <h4>#<%= buyer.price %></h4>
                            <div class="linked"><button class="btn btn-outline-danger"><a href="/single-details/<%= buyer.id %>"> View More!!!</a></button></div> 
                        </div> 
                   <% }
                }else{ %>
                    <h2>Loading!!!!!!</h2>
               <% } %>

              </div>
            </div>
        </div>
    </div>    


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>

</body>
</html>